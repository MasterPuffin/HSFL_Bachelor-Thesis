{{%FILTERS}}
<h1>{{ news.title }}</h1>

<hr class="mt-2 mb-4">
<img class="img-fluid rounded mx-auto d-block mb-4" alt="image" src="{{ news.image | fimage }}">
<p class="text-end"><strong>{{ news.timestamp | date }}</strong></p>
<p>{{ news.text }}</p>
<hr class="">
<div class="row position-relative">
    <a href="{{ root.web }}/users/{{ news.author.id }}/" class="stretched-link"></a>
    <div class="col-1">
        <img class="img-user rounded-circle" alt="image"
             src="{{ news.author.image | fimage }}">
    </div>
    <div class="col-11">
        <h4 class=" mt-2">{{ news.author.name }}</h4>
        <p class="mb-0">{{ news.author.department }}</p>
    </div>
</div>